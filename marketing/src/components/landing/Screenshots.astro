---
interface Props {
  lang: 'en' | 'de';
}

const { lang } = Astro.props;

const t = {
  en: {
    title: 'See It In Action',
    spaceView: 'Space View',
    spaceViewDesc: 'Top-down view of your grow spaces with plants positioned on a grid.',
    timelineView: 'Timeline View',
    timelineViewDesc: 'Gantt-style timeline showing plant lifecycles and rotation schedules.',
  },
  de: {
    title: 'Sieh es in Aktion',
    spaceView: 'Space View',
    spaceViewDesc: 'Draufsicht deiner Grow-Spaces mit Pflanzen auf einem Raster.',
    timelineView: 'Timeline View',
    timelineViewDesc: 'Gantt-ähnliche Timeline mit Pflanzen-Lebenszyklen und Rotationsplänen.',
  },
};

const labels = t[lang];
---

<section class="screenshots">
  <h2>{labels.title}</h2>

  <div class="screenshots-grid">
    <div class="screenshot-item">
      <div class="screenshot-wrapper">
        <img
          src="/screenshots/space-view.png"
          alt={labels.spaceView}
          loading="lazy"
        />
      </div>
      <h3>{labels.spaceView}</h3>
      <p>{labels.spaceViewDesc}</p>
    </div>

    <div class="screenshot-item">
      <div class="screenshot-wrapper">
        <img
          src="/screenshots/timeline-view.png"
          alt={labels.timelineView}
          loading="lazy"
        />
      </div>
      <h3>{labels.timelineView}</h3>
      <p>{labels.timelineViewDesc}</p>
    </div>
  </div>
</section>

<style>
  .screenshots {
    padding: var(--spacing-3xl) var(--spacing-md);
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    text-align: center;
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  .screenshots-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-2xl);
  }

  @media (min-width: 768px) {
    .screenshots-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .screenshot-item {
    text-align: center;
  }

  .screenshot-wrapper {
    background: var(--color-background-dark);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .screenshot-wrapper img {
    width: 100%;
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
  }

  h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-sm);
  }

  p {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }
</style>
