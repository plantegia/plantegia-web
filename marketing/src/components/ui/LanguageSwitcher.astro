---
import { getLocales, DEFAULT_LOCALE, type Locale } from '../../i18n';

interface Props {
  currentPath: string;
  lang: Locale;
}

const { currentPath, lang } = Astro.props;
const locales = getLocales();

// Convert path between languages
const getAlternatePath = (targetLang: Locale) => {
  // Remove current language prefix if present
  let basePath = currentPath;
  for (const loc of locales) {
    if (loc !== DEFAULT_LOCALE) {
      if (basePath === `/${loc}/` || basePath === `/${loc}`) {
        basePath = '/';
      } else if (basePath.startsWith(`/${loc}/`)) {
        basePath = basePath.replace(`/${loc}`, '');
      }
    }
  }

  // Add target language prefix if not default
  if (targetLang === DEFAULT_LOCALE) {
    return basePath;
  }
  if (basePath === '/') {
    return `/${targetLang}/`;
  }
  return `/${targetLang}${basePath}`;
};

const languageNames: Record<Locale, string> = {
  en: 'English',
  de: 'German',
};
---

<div class="lang-switch">
  {locales.map((loc, index) => (
    <>
      {index > 0 && <span class="divider">/</span>}
      {loc === lang ? (
        <span class="active">{loc.toUpperCase()}</span>
      ) : (
        <a
          href={getAlternatePath(loc)}
          aria-label={`Switch to ${languageNames[loc]}`}
        >
          {loc.toUpperCase()}
        </a>
      )}
    </>
  ))}
</div>

<style>
  .lang-switch {
    display: flex;
    align-items: center;
    gap: 2px;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .lang-switch a {
    text-decoration: none;
    color: var(--color-text-muted);
    padding: 2px 4px;
    transition: color var(--transition-fast);
  }

  .lang-switch a:hover {
    color: var(--color-text);
  }

  .lang-switch span {
    padding: 2px 4px;
  }

  .lang-switch .active {
    color: var(--color-text);
    background: var(--color-background-light);
    border-radius: var(--border-radius);
  }

  .divider {
    color: var(--color-text-muted);
    padding: 0 !important;
  }
</style>
