---
interface Props {
  href?: string;
}

const { href } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag href={href} class="logo">
  <img src="/icons/plantegia_icon.svg" alt="" class="logo-icon" />
  <span class="logo-text">PLANTEGIA</span>
</Tag>

<style>
  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--color-text);
  }

  .logo-icon {
    width: 22px;
    height: 22px;
    margin-right: var(--spacing-sm);
  }

  .logo-text {
    font-size: var(--font-size-lg);
    font-weight: 700;
    letter-spacing: 2px;
  }
</style>
