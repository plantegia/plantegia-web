---
import BaseLayout from './BaseLayout.astro';
import TOC from '../components/blog/TOC.astro';
import RelatedPosts from '../components/blog/RelatedPosts.astro';
import HeroImagePicker from '../components/blog/HeroImagePicker';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'guides'>;
  headings: { depth: number; slug: string; text: string }[];
}

const { post, headings } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, heroImageQuery, keywords, lang } = post.data;

const formattedDate = new Date(pubDate).toLocaleDateString(lang === 'de' ? 'de-DE' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdateDate = updatedDate
  ? new Date(updatedDate).toLocaleDateString(lang === 'de' ? 'de-DE' : 'en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  : null;

// Calculate reading time (~200 words per minute)
const wordCount = post.body?.split(/\s+/).length || 0;
const readingTime = Math.ceil(wordCount / 200);
---

<BaseLayout
  title={`${title} | Plantegia Guides`}
  description={description}
  keywords={keywords}
  lang={lang}
  ogImage={heroImage}
>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <div class="header-content">
          <div class="post-meta">
            <time datetime={pubDate.toISOString()}>{formattedDate}</time>
            {formattedUpdateDate && (
              <span class="updated">
                {lang === 'de' ? 'Aktualisiert:' : 'Updated:'} {formattedUpdateDate}
              </span>
            )}
            <span class="reading-time">
              {readingTime} {lang === 'de' ? 'Min. Lesezeit' : 'min read'}
            </span>
          </div>
          <h1>{title}</h1>
          <p class="description">{description}</p>
        </div>
        {heroImage && (
          <div class="header-image">
            {heroImageQuery ? (
              <HeroImagePicker
                client:load
                initialSrc={heroImage}
                searchQuery={heroImageQuery}
                alt={title}
              />
            ) : (
              <img class="hero-image" src={heroImage} alt={title} />
            )}
          </div>
        )}
      </header>

      <div class="post-content-wrapper">
        {headings.length > 0 && (
          <aside class="toc-sidebar">
            <TOC headings={headings} lang={lang} />
          </aside>
        )}

        <div class="post-content prose">
          <slot />
        </div>
      </div>

      <footer class="post-footer">
        <div class="cta-box">
          <h3>{lang === 'de' ? 'Bereit zu planen?' : 'Ready to plan your grow?'}</h3>
          <p>
            {lang === 'de'
              ? 'Plantegia hilft dir, deinen Perpetual Harvest visuell zu planen.'
              : 'Plantegia helps you visually plan your perpetual harvest setup.'}
          </p>
          <a href="/p/" class="cta-button">
            {lang === 'de' ? 'Jetzt starten' : 'Get Started'}
          </a>
        </div>

        <RelatedPosts currentSlug={post.slug} lang={lang} />
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: var(--spacing-2xl) 0;
    background: var(--color-background-dark);
  }

  .post-header {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 1024px) {
    .post-header {
      grid-template-columns: 3fr 2fr;
      align-items: center;
    }
  }

  .header-content {
    text-align: left;
  }

  .post-meta {
    display: flex;
    justify-content: flex-start;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .post-meta .updated::before {
    content: '•';
    margin-right: var(--spacing-md);
  }

  .reading-time::before {
    content: '•';
    margin-right: var(--spacing-md);
  }

  .post-header h1 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
  }

  .description {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
    margin: 0;
  }

  .header-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
    border-radius: var(--border-radius-lg);
  }

  .post-content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .post-content-wrapper {
      grid-template-columns: 1fr 280px;
      max-width: 1200px;
    }

    .toc-sidebar {
      position: sticky;
      top: var(--spacing-xl);
      height: fit-content;
      order: 2;
    }

    .post-content {
      order: 1;
      max-width: none;
      margin: 0;
    }
  }

  .post-content.prose {
    max-width: 100%;
    margin: 0;
  }

  .post-footer {
    margin-top: var(--spacing-3xl);
    max-width: 100%;
  }

  .cta-box {
    background: var(--color-background);
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .cta-box h3 {
    margin-bottom: var(--spacing-sm);
  }

  .cta-box p {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .cta-button {
    display: inline-block;
    background: var(--color-green);
    color: var(--color-text);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--border-radius);
    font-weight: 700;
    transition: background var(--transition-fast);
  }

  .cta-button:hover {
    background: var(--color-orange);
    color: var(--color-text);
  }
</style>
