---
/**
 * Simplified Landing Page for non-default locales
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SignInButton } from '../../components/ui/SignInButton';
import { getTranslations, getNonDefaultLocales, type Locale } from '../../i18n';

export function getStaticPaths() {
  return getNonDefaultLocales().map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Locale };
const t = getTranslations(lang).components;
const p = getTranslations(lang).pages.home;

// FAQ Schema for SEO
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": t.faq.faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
};
---

<BaseLayout
  title={p.title}
  description={p.description}
  keywords={p.keywords}
  lang={lang}
>
  <!-- HERO -->
  <section class="hero">
    <div class="container">
      <div class="hero__image">
        <img src="/heroplant.svg" alt="Cannabis grow planner - visual tool for perpetual harvest scheduling" class="hero__plant" />
      </div>
      <h1 class="hero__title">{t.hero.headline}</h1>
      <p class="hero__tagline">
        {t.hero.taglinePrefix} <span class="hl-seed">{t.hero.seed}</span>, <span class="hl-flip">{t.hero.flip}</span>, <span class="hl-harvest">{t.hero.harvest}</span>, {t.hero.taglineSuffix} <span class="hl-seed">{t.hero.seedAgain}</span> {t.hero.taglineEnd}
      </p>
      <div class="hero__cta">
        <SignInButton
          client:load
          className="cta-button"
          label={t.hero.cta}
          labelSignedIn={t.hero.ctaSignedIn}
        />
      </div>
      <div class="hero__price">
        <span class="price-tag">{t.hero.price}</span>
        <span class="guarantee" set:html={t.hero.guarantee}></span>
      </div>
    </div>
  </section>

  <!-- PROBLEM -->
  <section class="section">
    <div class="container">
      <h2 class="section__headline">
        {t.problem.headline}<br />
        <span class="text-orange">{t.problem.headlineAccent}</span>
      </h2>
      <div class="problem-list">
        <div class="problem-item">
          <p class="problem-item__text" set:html={t.problem.q1} />
          <span class="problem-item__keywords">{t.problem.k1}</span>
        </div>
        <div class="problem-item">
          <p class="problem-item__text" set:html={t.problem.q2} />
          <span class="problem-item__keywords">{t.problem.k2}</span>
        </div>
        <div class="problem-item">
          <p class="problem-item__text" set:html={t.problem.q3} />
          <span class="problem-item__keywords">{t.problem.k3}</span>
        </div>
      </div>
      <div class="solution">
        <h3 class="solution__title">{t.problem.solutionHeadline}</h3>
        <p class="solution__text">{t.problem.solution}</p>
      </div>
    </div>
  </section>

  <!-- FEATURES -->
  <section class="section section--alt">
    <div class="container">
      <!-- Headline with inline view switcher -->
      <h2 class="section__headline text-teal">
        {t.features.headlineParts.prefix}
        <span class="view-toggle-group">
          <button class="view-toggle active" data-view="timeline">
            <span class="view-toggle__badge">{t.features.time.subtitle}</span>
            <span class="view-toggle__name">{t.features.time.title}</span>
          </button>
          {t.features.headlineParts.and}
          <button class="view-toggle" data-view="space">
            <span class="view-toggle__name">{t.features.space.title}</span>
            <span class="view-toggle__badge">{t.features.space.subtitle}</span>
          </button>
        </span>
      </h2>

      <!-- View Switcher with Screenshots -->
      <div class="view-switcher">
        <div class="view-screenshot">
          <img
            src="/screenshots/timeline-view.png"
            alt={t.features.time.alt}
            class="view-screenshot__img"
            data-view="timeline"
          />
          <img
            src="/screenshots/space-view.png"
            alt={t.features.space.alt}
            class="view-screenshot__img"
            data-view="space"
            style="display: none;"
          />
        </div>
        <div class="view-desc-container">
          <p class="view-desc" data-view="timeline">{t.features.time.desc}</p>
          <p class="view-desc" data-view="space" style="display: none;">{t.features.space.desc}</p>
        </div>
      </div>

      <!-- Tools -->
      <div class="tools">
        <h3 class="tools__label">{t.features.toolbox.label}</h3>
        <div class="tools__grid">
          <div class="tool">
            <div class="tool__icon">
              <svg viewBox="0 0 24 24" fill="none">
                <path d="M4.80371 4.80371C4.93868 4.66932 5.1214 4.62065 5.30273 4.66797H5.30371L18.7402 8.15039C19.0267 8.22458 19.2345 8.42704 19.3145 8.7002L19.3408 8.82129V8.82227C19.3896 9.15667 19.2452 9.46095 18.9551 9.63574L15.7041 11.5938L14.9922 12.0225L18.4482 15.4785C18.6136 15.644 18.7031 15.8609 18.7031 16.0957C18.7031 16.3305 18.6136 16.5474 18.4482 16.7129L16.7129 18.4473V18.4482C16.3727 18.7881 15.8187 18.7874 15.4785 18.4473L12.6104 15.5801L12.0225 14.9922L11.5938 15.7041L9.63574 18.9551V18.9561C9.48238 19.2115 9.22938 19.3495 8.94922 19.3496C8.90771 19.3496 8.86621 19.347 8.8252 19.3408H8.82227C8.52873 19.2979 8.29975 19.12 8.19043 18.8574L8.15137 18.7393L4.66797 5.30371C4.62034 5.11932 4.67061 4.93648 4.80371 4.80371Z" stroke="currentColor" stroke-width="1.3"/>
              </svg>
            </div>
            <div class="tool__content">
              <span class="tool__name">{t.features.toolbox.cursor.name}</span>
              <span class="tool__desc">{t.features.toolbox.cursor.desc}</span>
            </div>
          </div>
          <div class="tool">
            <div class="tool__icon">
              <svg viewBox="0 0 24 24" fill="none">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M19.876 3H4.124C3.82622 3.00105 3.54094 3.11981 3.33038 3.33038C3.11981 3.54094 3.00105 3.82622 3 4.124V19.876C3.00105 20.1738 3.11981 20.4591 3.33038 20.6696C3.54094 20.8802 3.82622 20.9989 4.124 21H19.876C20.1738 20.9989 20.4591 20.8802 20.6696 20.6696C20.8802 20.4591 20.9989 20.1738 21 19.876V4.124C20.9989 3.82622 20.8802 3.54094 20.6696 3.33038C20.4591 3.11981 20.1738 3.00105 19.876 3ZM19.876 19.31C19.876 19.4601 19.8164 19.6041 19.7102 19.7102C19.6041 19.8164 19.4601 19.876 19.31 19.876H4.69C4.53989 19.876 4.39592 19.8164 4.28978 19.7102C4.18363 19.6041 4.124 19.4601 4.124 19.31V4.69C4.124 4.53989 4.18363 4.39592 4.28978 4.28978C4.39592 4.18363 4.53989 4.124 4.69 4.124H19.31C19.4601 4.124 19.6041 4.18363 19.7102 4.28978C19.8164 4.39592 19.876 4.53989 19.876 4.69V19.31Z" fill="currentColor"/>
                <path d="M11.0198 12.9802H8V11.0198H11.0198V8H12.9802V11.0198H16V12.9802H12.9802V16H11.0198V12.9802Z" fill="currentColor"/>
              </svg>
            </div>
            <div class="tool__content">
              <span class="tool__name">{t.features.toolbox.space.name}</span>
              <span class="tool__desc">{t.features.toolbox.space.desc}</span>
            </div>
          </div>
          <div class="tool">
            <div class="tool__icon">
              <svg viewBox="0 0 24 24" fill="none">
                <path d="M22.3681 3.74315H13.9444C13.4448 3.06685 12.644 2.63281 11.7439 2.63281C10.2281 2.63281 9 3.8643 9 5.37672C9 6.88914 10.2281 8.12063 11.7439 8.12063C12.6439 8.12063 13.4448 7.68491 13.9444 7.01029H22.3681C23.2681 7.01029 24 6.27848 24 5.3784C24 4.47837 23.2682 3.74651 22.3681 3.74651V3.74315ZM11.7424 7.25759C10.7043 7.25759 9.85981 6.41307 9.85981 5.37504C9.85981 4.33702 10.7043 3.49249 11.7424 3.49249C12.7804 3.49249 13.6199 4.33702 13.6199 5.37504C13.6199 6.41307 12.7753 7.25759 11.7424 7.25759Z" fill="currentColor"/>
                <path d="M1.5231 15.0363H9.3852C9.85156 14.4051 10.5989 14 11.439 14C12.8537 14 14 15.1494 14 16.561C14 17.9726 12.8537 19.122 11.439 19.122C10.599 19.122 9.85156 18.7153 9.3852 18.0856H1.5231C0.683066 18.0856 0 17.4026 0 16.5625C0 15.7225 0.683026 15.0395 1.5231 15.0395V15.0363ZM11.4405 18.3165C12.4093 18.3165 13.1975 17.5282 13.1975 16.5594C13.1975 15.5906 12.4093 14.8024 11.4405 14.8024C10.4716 14.8024 9.68812 15.5906 9.68812 16.5594C9.68812 17.5282 10.4763 18.3165 11.4405 18.3165Z" fill="currentColor"/>
                <circle cx="11.566" cy="12.935" r="0.565" fill="currentColor"/>
                <circle cx="11.566" cy="11.248" r="0.565" fill="currentColor"/>
                <circle cx="11.566" cy="9.562" r="0.565" fill="currentColor"/>
              </svg>
            </div>
            <div class="tool__content">
              <span class="tool__name">{t.features.toolbox.split.name}</span>
              <span class="tool__desc">{t.features.toolbox.split.desc}</span>
            </div>
          </div>
          <div class="tool">
            <div class="tool__icon">
              <svg viewBox="0 0 24 24" fill="none">
                <path d="M20.3418 7.6355L16.3643 3.65813C15.4846 2.78062 14.0613 2.78062 13.1815 3.65813L3.65816 13.1811C2.78061 14.0608 2.78061 15.4839 3.65816 16.3637L7.63645 20.3419C8.51546 21.2194 9.93941 21.2194 10.8185 20.3419L20.3418 10.8182C21.2194 9.93922 21.2194 8.51532 20.3418 7.6355ZM19.5463 10.0226L13.6028 15.9658C13.1633 16.4046 12.4513 16.4046 12.0118 15.9658L8.03351 11.9877C7.59474 11.5482 7.59474 10.8363 8.03351 10.3968L13.977 4.4535C14.4165 4.01475 15.1285 4.01475 15.568 4.4535L19.5463 8.43162C19.9851 8.87111 19.9851 9.58234 19.5463 10.0226Z" fill="currentColor"/>
              </svg>
            </div>
            <div class="tool__content">
              <span class="tool__name">{t.features.toolbox.erase.name}</span>
              <span class="tool__desc">{t.features.toolbox.erase.desc}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature Cards -->
      <div class="features-grid">
        {t.features.featuresList.map((feature) => (
          <div class="feature-card">
            <h4 class="feature-card__title">{feature.title}</h4>
            <p class="feature-card__desc">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <script>
    const viewToggles = document.querySelectorAll('.view-toggle');
    const viewImages = document.querySelectorAll('.view-screenshot__img');
    const viewDescs = document.querySelectorAll('.view-desc');

    viewToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const view = toggle.getAttribute('data-view');

        viewToggles.forEach(t => t.classList.remove('active'));
        toggle.classList.add('active');

        viewImages.forEach(img => {
          (img as HTMLElement).style.display = img.getAttribute('data-view') === view ? 'block' : 'none';
        });

        viewDescs.forEach(desc => {
          (desc as HTMLElement).style.display = desc.getAttribute('data-view') === view ? 'block' : 'none';
        });
      });
    });
  </script>

  <!-- WHO IT'S FOR -->
  <section class="section">
    <div class="container">
      <span class="section__label">{t.whoItsFor.sectionTitle}</span>
      <div class="audience-grid">
        {t.whoItsFor.audiences.map((a) => (
          <div class="audience-card">
            <h3 class="audience-card__title">{a.title}</h3>
            <p class="audience-card__desc">{a.description}</p>
          </div>
        ))}
      </div>
      <p class="not-for">{t.whoItsFor.notFor}</p>
    </div>
  </section>

  <!-- USE CASES -->
  <section class="section section--alt">
    <div class="container">
      <span class="section__label">{t.useCases.sectionTitle}</span>
      <p class="section__intro">{t.useCases.intro}</p>
      <div class="cases-grid">
        {t.useCases.cases.map((c) => (
          <div class="case-card">
            <span class="case-card__name">{c.name}</span>
            <span class="case-card__detail">{c.detail}</span>
          </div>
        ))}
      </div>
      <p class="note">{t.useCases.note}</p>
    </div>
  </section>

  <!-- ALTERNATIVES -->
  <section class="section">
    <div class="container">
      <span class="section__label">{t.alternatives.sectionTitle}</span>
      <div class="alternatives-list">
        {t.alternatives.alternatives.map((alt) => (
          <div class="alternative">
            <h3 class="alternative__name">{alt.name}</h3>
            <p class="alternative__problem">{alt.problem}</p>
          </div>
        ))}
      </div>
      <p class="conclusion">{t.alternatives.conclusion}</p>
    </div>
  </section>

  <!-- TESTIMONIALS -->
  <section class="section section--alt">
    <div class="container">
      <span class="section__label">{t.testimonials.sectionTitle}</span>
      <div class="testimonials-grid">
        {t.testimonials.testimonials.map((item) => (
          <blockquote class="testimonial">
            <p class="testimonial__quote">"{item.quote}"</p>
            <footer class="testimonial__author">
              <span class="testimonial__name">{item.name}</span>
              <span class="testimonial__detail">{item.detail}</span>
            </footer>
          </blockquote>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section">
    <div class="container">
      <span class="section__label">{t.faq.sectionTitle}</span>
      <dl class="faq-list">
        {t.faq.faqs.map((faq) => (
          <div class="faq-item">
            <dt class="faq-item__question">{faq.q}</dt>
            <dd class="faq-item__answer" set:html={faq.a} />
          </div>
        ))}
      </dl>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <span class="cta-price">{t.cta.price}</span>
        <p class="cta-note">{t.cta.note}</p>
        <p class="cta-guarantee" set:html={t.cta.guarantee}></p>
        <SignInButton
          client:load
          className="cta-button"
          label={t.cta.cta}
          labelSignedIn={t.cta.ctaSignedIn}
        />
      </div>
    </div>
  </section>

  <script is:inline type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
</BaseLayout>

<style>
  /* ============================================
     BASE STYLES
     ============================================ */

  .container {
    max-width: 640px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .section {
    padding: var(--spacing-2xl) 0;
  }

  .section--alt {
    background: rgba(81, 133, 59, 0.05);
  }

  .section__label {
    display: block;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
  }

  .section__headline {
    font-size: clamp(20px, 5vw, 28px);
    line-height: 1.3;
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .section__intro {
    font-family: var(--font-family-sans);
    font-size: 16px;
    color: var(--color-text);
    margin-bottom: var(--spacing-xl);
  }

  .text-orange { color: var(--color-orange); }
  .text-teal { color: var(--color-teal); }
  .text-green { color: var(--color-green); }

  /* ============================================
     HERO
     ============================================ */

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: flex-start;
    padding-top: 80px;
    background: var(--color-stage-flowering);
  }

  .hero .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero__image {
    display: flex;
    justify-content: center;
    margin-bottom: var(--spacing-xl);
  }

  .hero__plant {
    width: min(70vw, 500px);
    height: auto;
  }

  .hero__title {
    font-size: clamp(22px, 6vw, 32px);
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
  }

  .hero__tagline {
    font-family: var(--font-family-sans);
    font-size: 16px;
    color: var(--color-text);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  .hero__cta {
    margin-bottom: var(--spacing-md);
  }

  .hero__price {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }

  .price-tag {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-orange);
  }

  .guarantee {
    font-family: var(--font-family-sans);
    font-size: 13px;
    color: var(--color-text-muted);
  }

  /* Highlight spans */
  .hl-seed {
    background-color: var(--color-stage-seedling);
    color: var(--color-background);
    padding: 1px 5px;
    font-weight: 500;
  }

  .hl-flip {
    background-color: var(--color-orange);
    color: var(--color-background);
    padding: 1px 5px;
    font-weight: 500;
  }

  .hl-harvest {
    background-color: var(--color-stage-flowering);
    color: var(--color-text);
    padding: 1px 5px;
    font-weight: 500;
  }

  /* ============================================
     PROBLEM
     ============================================ */

  .problem-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .problem-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .problem-item__text {
    font-family: var(--font-family-sans);
    font-size: 15px;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin: 0;
  }

  .problem-item__text :global(.hl-seed),
  .problem-item__text :global(.hl-flip),
  .problem-item__text :global(.hl-harvest),
  .problem-item__text :global(.hl-time) {
    background-color: var(--color-stage-seedling);
    color: var(--color-background);
    padding: 1px 5px;
    border-radius: 2px;
    font-weight: 500;
  }

  .problem-item__text :global(.hl-flip) {
    background-color: var(--color-orange);
  }

  .problem-item__text :global(.hl-harvest) {
    background-color: var(--color-stage-flowering);
    color: var(--color-text);
  }

  .problem-item__text :global(.hl-time) {
    background-color: var(--color-teal);
    color: var(--color-background);
  }

  .problem-item__keywords {
    font-size: 11px;
    color: var(--color-text-muted);
    opacity: 0.5;
    letter-spacing: 0.02em;
  }

  .solution {
    border-top: 1px solid var(--color-border);
    padding-top: var(--spacing-xl);
  }

  .solution__title {
    font-size: 14px;
    font-weight: 700;
    color: var(--color-green);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-sm);
  }

  .solution__text {
    font-family: var(--font-family-sans);
    font-size: 16px;
    color: var(--color-text);
    margin: 0;
  }

  /* ============================================
     FEATURES
     ============================================ */

  /* Inline view toggle in headline */
  .section__headline:has(.view-toggle-group) {
    line-height: 2;
  }

  .view-toggle-group {
    display: inline;
    white-space: nowrap;
  }

  .view-toggle {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 4px 10px;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: all 150ms ease;
    font-family: inherit;
    vertical-align: middle;
  }

  .view-toggle:hover {
    border-color: var(--color-teal);
  }

  .view-toggle.active {
    background: var(--color-teal);
    border-color: var(--color-teal);
  }

  .view-toggle__name {
    font-size: inherit;
    font-weight: 700;
    color: var(--color-text);
  }

  .view-toggle.active .view-toggle__name {
    color: var(--color-background-dark);
  }

  .view-toggle__badge {
    font-size: 10px;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    background: var(--color-background-dark);
    padding: 2px 6px;
    border-radius: 2px;
  }

  .view-toggle.active .view-toggle__badge {
    color: var(--color-teal);
    background: var(--color-background-dark);
  }

  .view-switcher {
    margin-bottom: var(--spacing-xl);
  }

  .view-screenshot {
    margin-bottom: var(--spacing-md);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .view-screenshot__img {
    width: 100%;
    height: auto;
    display: block;
  }

  .view-desc-container {
    min-height: 60px;
  }

  .view-desc {
    font-family: var(--font-family-sans);
    font-size: 14px;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin: 0;
  }

  .tools {
    margin-bottom: var(--spacing-xl);
  }

  .tools__label {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .tools__grid {
