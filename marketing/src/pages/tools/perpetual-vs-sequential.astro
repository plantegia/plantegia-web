---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PerpetualVsSequentialCalculator from '../../components/tools/PerpetualVsSequentialCalculator';
import { getTranslations } from '../../i18n';

const lang = 'en';
const t = getTranslations(lang).pages.perpetualVsSequential;

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": t.faq.items.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Perpetual vs Sequential Harvest Calculator",
  "description": t.description,
  "applicationCategory": "Utility",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  }
};
---

<BaseLayout
  title={t.title}
  description={t.description}
  keywords={t.keywords}
  lang={lang}
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(webAppSchema)} slot="head" />

  <div class="tool-page">
    <div class="container">
      <header class="tool-header">
        <h1>Perpetual vs Sequential Harvest</h1>
        <p class="subtitle">{t.subtitle}</p>
      </header>

      <div class="calculator-section">
        <PerpetualVsSequentialCalculator lang={lang} client:load />
      </div>

      <section class="content-section">
        <h2>{t.whatIs.title}</h2>
        <p>{t.whatIs.content}</p>
      </section>

      <section class="content-section">
        <h2>{t.referenceTable.title}</h2>
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                {t.referenceTable.headers.map(header => (
                  <th>{header}</th>
                ))}
              </tr>
            </thead>
            <tbody>
              {t.referenceTable.rows.map(row => (
                <tr>
                  {row.map((cell, i) => (
                    <td class={i === 1 ? 'highlight' : ''}>{cell}</td>
                  ))}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        <p class="footnote">{t.referenceTable.footnote}</p>
      </section>

      <section class="content-section">
        <h2>{t.howItWorks.title}</h2>
        <p>{t.howItWorks.intro}</p>

        <h3>{t.howItWorks.keyConcepts.title}</h3>
        <ul class="concepts-list">
          {t.howItWorks.keyConcepts.items.map(item => (
            <li>
              <strong>{item.term}:</strong> {item.definition}
            </li>
          ))}
        </ul>
      </section>

      <section class="content-section">
        <h2>{t.tips.title}</h2>
        <ul class="tips-list">
          {t.tips.items.map(tip => (
            <li>{tip}</li>
          ))}
        </ul>
      </section>

      <section class="content-section faq-section">
        <h2>{t.faq.title}</h2>
        {t.faq.items.map(item => (
          <div class="faq-item">
            <h3>{item.question}</h3>
            <p>{item.answer}</p>
          </div>
        ))}
      </section>

      <section class="cta-section">
        <h2>{t.cta.title}</h2>
        <p>{t.cta.content}</p>
        <a href="https://app.plantegia.com" class="cta-button">{t.cta.button}</a>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .tool-page {
    padding: var(--spacing-2xl) 0;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .tool-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .tool-header h1 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-sm);
  }

  .subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
  }

  .calculator-section {
    margin-bottom: var(--spacing-2xl);
  }

  .content-section {
    margin-bottom: var(--spacing-2xl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  .content-section h2 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-teal);
  }

  .content-section h3 {
    font-size: var(--font-size-lg);
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
  }

  .content-section p {
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .concepts-list,
  .tips-list {
    color: var(--color-text-muted);
    padding-left: var(--spacing-lg);
  }

  .concepts-list li,
  .tips-list li {
    margin-bottom: var(--spacing-sm);
    line-height: 1.6;
  }

  .concepts-list strong {
    color: var(--color-text);
  }

  /* Table styles */
  .table-wrapper {
    overflow-x: auto;
    margin: var(--spacing-md) 0;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: var(--font-size-sm);
  }

  th, td {
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--color-border);
    text-align: center;
  }

  th {
    background: var(--color-background-dark);
    font-weight: 700;
    color: var(--color-text);
  }

  td:first-child {
    text-align: left;
    font-weight: 600;
  }

  td.highlight {
    color: var(--color-green);
    font-weight: 700;
  }

  .footnote {
    font-size: var(--font-size-sm);
    font-style: italic;
    margin-top: var(--spacing-sm);
  }

  /* FAQ styles */
  .faq-section h2 {
    margin-bottom: var(--spacing-lg);
  }

  .faq-item {
    margin-bottom: var(--spacing-lg);
  }

  .faq-item h3 {
    font-size: var(--font-size-base);
    margin-top: 0;
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
  }

  .faq-item p {
    margin: 0;
  }

  /* CTA styles */
  .cta-section {
    background: var(--color-background-dark);
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    text-align: center;
    margin-top: var(--spacing-2xl);
  }

  .cta-section h2 {
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .cta-section p {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
    max-width: 50ch;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-block;
    background: var(--color-green);
    color: var(--color-text);
    padding: var(--spacing-sm) var(--spacing-xl);
    border-radius: var(--border-radius);
    font-weight: 700;
    transition: background var(--transition-fast);
  }

  .cta-button:hover {
    background: var(--color-orange);
    color: var(--color-text);
  }
</style>
